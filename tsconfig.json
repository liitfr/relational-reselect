{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "es5",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["es6", "dom", "es2017"],
    "rootDir": "src",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
